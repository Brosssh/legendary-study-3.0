    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "Debug debug.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal"
        },{
            "name": "Debug calc_daily_report.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/calc_daily_report.py",
            "console": "integratedTerminal"
        },{
            "name": "Run migration script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/migrate_old_reports.py",
            "console": "integratedTerminal"
        }
    ]
}